class Employee:
    isHuman = True
    def __init__(self, name, salary, dept):
        self.name = name 
        self.salary = salary 
        self.dept = dept  
    def work(self):
        print("Employee is working")

emp1 = Employee('Bob', 60000, 'sales')
emp2 = Employee ('Cindy', 70000, 'HR') 
print(emp1.name) 
emp2.work()

# You can create a child class using a predefined class

class Manager(Employee):
    def work(self):
        print(self.name, "is in a meeting.")
# This is called Inheritance
# A child class can have the parent functions re-declared and do 
# something different        
# This is called Method Overriding

man1 = Manager('Bill', 100000, 'sales')
man1.work()
emp1.work()

class Trainee(Employee):
    def work(self):
        print(self.name, "is watching a training video.")